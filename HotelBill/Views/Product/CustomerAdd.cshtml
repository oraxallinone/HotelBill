@model HotelBill.Models.CustomerMaster
@{
    ViewBag.Title = "Customer Add";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "customerAddForm" }))
{
    <div class="content-wrapper">

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-info card-outline">
                            <div class="card-header">
                                <h3 class="card-title">New Customer</h3>
                            </div>
                            <div>
                                <div class="card-body">
                                    <div class="row">
                                        
                                        <div class="form-group col-md-6">
                                            <label for="exampleInputEmail1">Customer Name</label>
                                            @Html.TextBoxFor(m => m.custName, new { placeholder = "Customer Name", @class = "form-control form-control-sm" })
                                            @Html.ValidationMessageFor(m => m.custName, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="exampleInputEmail1">Address line 1</label>
                                            @Html.TextBoxFor(m => m.addr1, new { placeholder = "Address 1", @class = "form-control form-control-sm" })
                                            @Html.ValidationMessageFor(m => m.addr1, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="exampleInputEmail1">Address line 2</label>
                                            @Html.TextBoxFor(m => m.addr2, new { placeholder = "Address 2", @class = "form-control form-control-sm" })
                                            @Html.ValidationMessageFor(m => m.addr2, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="exampleInputEmail1">Address line 3</label>
                                            @Html.TextBoxFor(m => m.addr3, new { placeholder = "Address 3", @class = "form-control form-control-sm" })
                                            @Html.ValidationMessageFor(m => m.addr3, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="exampleInputEmail1">GstIn Number</label>
                                            @Html.TextBoxFor(m => m.gstIn, new { placeholder = "GstIn Number", @class = "form-control form-control-sm" })
                                            @Html.ValidationMessageFor(m => m.gstIn, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="exampleInputEmail1">Gst Type</label>
                                            <select class="form-control form-control-sm" id="gstType" name="gstType">
                                                <option value="0">-- Select One --</option>
                                                <option value="1">CGST/ SGST</option>
                                                <option value="2">IGST</option>
                                            </select>
                                        </div>
                                         
                                    </div>
                                </div>
                                <div class="card-footer">
                                    @if (ViewBag.isPresent != null)
                                    { <span class="bg-red btn btn-sm">@ViewBag.isPresent</span> }
                                    <button type="submit" id="CustomerSubmit" class="btn  btn-sm  btn-info w104">Submit</button>
                                    <a href="/Product/CustomerList" class="btn btn-sm   btn-outline-danger w104">Back</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
}



<aside class="control-sidebar control-sidebar-dark"></aside>

<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $("#CustomerSubmit").click(function (e) {
            e.preventDefault();
            var custName = $("#custName").val();
            var addr1 = $("#addr1").val();
            var addr2 = $("#addr2").val();
            var gstIn = $("#gstIn").val();
            var gstType = $("#gstType").val();
            var isPost = false;
            if (custName == "") { swal("", "Customer Name should not be empty", "error"); return false; }
            if (addr1 == "") { swal("", "Address 1 should not be empty", "error"); return false; }
            if (addr2 == "") { swal("", "Address 2 should not be empty", "error"); return false; }
            if (gstIn == "") { swal("", "GstIn should not be empty", "error"); return false; }
            if (gstType == "" || gstType == 0) { swal("", "Gst Type should not be empty", "error"); return false; }
            isPost = true
            if (isPost == true) {
                $("#customerAddForm").submit();
            }
        });
    });
</script>