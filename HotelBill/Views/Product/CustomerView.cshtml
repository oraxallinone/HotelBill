@model HotelBill.Models.CustomerMaster
@{
    ViewBag.Title = "Customer View";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "customerViewForm" }))
{
    <div class="content-wrapper">

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-info card-outline">
                            <div class="card-header">
                                <h3 class="card-title">View Customer</h3>
                            </div>
                            <div>
                                <div class="card-body">
                                    <div class="row">

                                        <div class="form-group col-md-6">
                                            <label for="exampleInputEmail1">Customer Name</label>
                                            @Html.HiddenFor(m => m.custId)
                                            @Html.TextBoxFor(m => m.custName, new { placeholder = "Customer Name", @class = "form-control form-control-sm", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(m => m.custName, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="exampleInputEmail1">Address 1</label>
                                            @Html.TextBoxFor(m => m.addr1, new { placeholder = "Address 1", @class = "form-control form-control-sm", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(m => m.addr1, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="exampleInputEmail1">Address 2</label>
                                            @Html.TextBoxFor(m => m.addr2, new { placeholder = "Address 2", @class = "form-control form-control-sm", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(m => m.addr2, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="exampleInputEmail1">Address 3</label>
                                            @Html.TextBoxFor(m => m.addr3, new { placeholder = "Address 3", @class = "form-control form-control-sm", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(m => m.addr3, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="exampleInputEmail1">GstIn Number</label>
                                            @Html.TextBoxFor(m => m.gstIn, new { placeholder = "GstIn Number", @class = "form-control form-control-sm", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(m => m.gstIn, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="exampleInputEmail1">Gst Type</label>
                                            @Html.HiddenFor(x => x.gstType)
                                            <select class="form-control form-control-sm" id="gstTypeEdit" name="gstTypeEdit" disabled="true">
                                                <option value="0">-- Select One --</option>
                                                <option value="1">CGST/ SGST</option>
                                                <option value="2">IGST</option>

                                            </select>
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="exampleInputEmail1">Is Active For Transaction</label>
                                            @Html.CheckBoxFor(m => m.isActive, new { @class = "form-control form-control-sm", @readonly = "readonly", @disabled = "disabled" })
                                            @if (Model != null && Model.isActive != null && Model.isActive == true)
                                            {
                                                <span class="acCustomer text-green">(Active)</span>
                                            }
                                            else
                                            {
                                                <span class="acCustomer text-red">(Inactive)</span>
                                            }

                                        </div>

                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a href="/Product/CustomerList" class="btn btn-sm   btn-outline-danger w104">Back</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
}

<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var getGstType = $("#gstType").val();
        if (getGstType != '') {
            $("#gstTypeEdit").val(getGstType).change();
        }
        $("#gstTypeEdit").change(function () {
            const ddlValue = $(this).val();
            $("#gstType").val(ddlValue);
        });
    });
</script>

