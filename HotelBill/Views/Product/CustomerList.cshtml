@model IEnumerable<HotelBill.Models.CustomerMaster>

@{
    ViewBag.Title = "ItemList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <div class="col-4">
                                <h3 class="card-title">Customer List</h3>
                            </div>
                            <div class="offset-10 col-2 textRight">
                                <a href="/Product/CustomerAdd" class="btn btn-outline-dangerCustome1 btn-dangerCustome1 btn-xs">Add New Customer</a>
                            </div>

                        </div>
                        <div>
                            <div class="card-body">

                                <div class="row">
                                    <table width="100%" class="tableCust table-hover" style="border: 1px solid #3574a4b0">
                                        <tr class="fontMenuHeader textCenter">
                                            <td style="width:5% ;text-align: center;"> Sl No </td>
                                            <td style="width:21%; text-align: left"> Customer Name/ Id </td>
                                            <td style="width:21% ;"> Address line 1 </td>
                                            <td style="width:14% ;"> Address line 2 </td>
                                            <td style="width:14% ;"> Address line 3 </td>
                                            <td style="width:5% ;"> GstIn </td>
                                            <td style="width:10% ;"> Gst Type </td>
                                            <td style="width:10% ;"> ACTION </td>
                                        </tr>
                                        @{
                                            int snNo = Model.Count()+1;
                                            foreach (var itm in @Model)
                                            {
                                                snNo = snNo - 1;

                                                string bgModified = itm.isActive == true ? "" : "#f4240438";

                                                <tr class="fontMenuBody" style="border: 1px solid #3574a4b0;background-color:@bgModified">
                                                    <td class="textCenter">@snNo</td>
                                                    <td class=""> (@itm.custId) @itm.custName </td>
                                                    <td class="textCenter">@itm.addr1</td>
                                                    <td class="textCenter">@itm.addr2</td>
                                                    <td class="textCenter">@itm.addr3</td>
                                                    <td class="textCenter">@itm.gstIn</td>
                                                    @{
                                                        if(itm.gstType==null)
                                                        {
                                                            <td class="textCenter"> Not define</td>
                                                        }
                                                        else if(itm.gstType== 1)
                                                        {
                                                            <td class="textCenter"> CGST/ SGST</td>
                                                        }
                                                        else if(itm.gstType== 2)
                                                        {
                                                            <td class="textCenter"> IGST </td>
                                                        }
                                                    }

                                                    <td class="textCenter">
                                                        <a href="/Product/CustomerView/@itm.custId"> <i class="fa-solid fa-eye"></i></a>|
                                                        <a href="/Product/CustomerEdit/@itm.custId"> <i class="fa-solid fa-pen-to-square"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
