@model IEnumerable<HotelBill.Models.CustomerBillDTO>
@{
    ViewBag.Title = "GstInvoiceList";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <div class="col-2">
                                <h3 class="card-title">Gst Draft List</h3>
                            </div>
                            <div class="offset-10 col-2 textRight">
                                <a href="/Invoice/GstInvoiceCreate" class="btn btn-outline-dangerCustome1 btn-dangerCustome1 btn-xs">Create New Gst Bill</a>
                            </div>
                        </div>
                        <div>
                            <div class="card-body">
                                <div class="row">
                                    <table width="100%" class="tableCust table-hover" style="border: 1px solid #3574a4b0">
                                        <tr class="fontMenuHeader textCenter">
                                            <td style="width:5% ;text-align: center;"> Sl No </td>
                                            <td style="width: 10%; text-align: left"> Draft No </td>
                                            <td style="width:25% ;"> Name </td>
                                            <td style="width: 10%; text-align: center; "> Gst Type </td>
                                            <td style="width: 10%; text-align: left"> Date </td>
                                            <td style="width:10% ;"> Total Value </td>
                                            <td style="width:10% ;"> Grand Total </td>
                                            <td style="width:10% ;"> ACTION </td>
                                        </tr>
                                        @{
                                            int snNo = Model.Count() + 1;
                                            foreach (var itm in @Model)
                                            {
                                                snNo = snNo - 1;
                                                string bgModified = itm.IsActive == true ? "" : "#f4240438";
                                                <tr class="fontMenuBody" style="border: 1px solid #3574a4b0;background-color:@bgModified">
                                                    <td class="textCenter">@snNo</td>
                                                    <td class=""> @itm.IDraftNo </td>
                                                    <td class="textLeft">@itm.custName</td>
                                                    @if (itm.gstType == 1)
                                                    {
                                                    <td class="textCenter">CGST/ SGST</td> }
                                                    else if (itm.gstType == 2)
                                                    {
                                                    <td class="textCenter">IGST</td> }
                                                    else
                                                    {
                                                    <td class="textCenter">-- Not Defined --</td> }
                                                    <td class=""> @Convert.ToDateTime(itm.IDate).ToString("dd-MM-yyyy")</td>
                                                    <td class="textCenter">@itm.TotalValue</td>
                                                    <td class="textCenter">@itm.TotalTotal</td>
                                                    <td class="textCenter">
                                                        @Html.ActionLink("Load draft", "GstInvoiceCreate", "Invoice", new { draftNo = @itm.IDraftNo }, null)
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>